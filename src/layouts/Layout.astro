---
import { ViewTransitions } from "astro:transitions"
import Header from "./Header.astro"
import Main from "./Main.astro"

export interface Props {
    title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="h-full text-base select-none">
    <head>
        <ViewTransitions />
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Brinsley Blackwood, Software Engineer"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body class="dark h-full">
        <div class="bg-white dark:bg-slate-950 text-slate-600 dark:text-slate-400">
            <Header />

            <Main>
                <slot />
            </Main>
        </div>
    </body>
</html>

<style is:global>
    :root {
        --primary-500: #0099ff;
        --secondary-500: #ff9900;
    }
</style>
